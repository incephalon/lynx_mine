@model DataAccess.Model.ArticleModel
@{
	ViewBag.Title = "Index";
}


<div class="col-sm-12">
	@using (Ajax.BeginForm("Index", "Home", new AjaxOptions { HttpMethod = "Post" }))
	{
		<div class="col-xs-8 col-sm-8">
			<div class="row show-grid header-input">
				<div class="col-xs-9 col-sm-11">
					@Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = "Browse www", id = "url" })
				</div>
				<div class="col-xs-2 col-sm-1">
					<button id="goButton" type="button" data-iframeid="urlIframe" data-textboxid="url" class="btn btn-primary">Search</button>
				</div>
			</div>
			<div class="col-xs-12 col-sm-12"></div>
			<div class="col-xs-12 col-sm-12"></div>
			<div class="col-xs-12 col-sm-12">
				<div class="row show-grid">
					<iframe id="urlIframe" class="embed-responsive-item" src="http://getbootstrap.com/"></iframe>
				</div>
			</div>
		</div>
		<div class="col-xs-4 col-sm-4">

			@Html.Partial("Search")

			<div id="tagId" type="text" class="form-control" style="display:none"></div>
			<textarea id="notesElement" class="form-control article-note" rows="3" placeholder="My notes"></textarea>


			<select data-placeholder="Tags" multiple class="chosen-select">
			</select>


			<button id="saveButton" type="button" class="btn btn-primary">Save</button>
			<button id="clearButton" type="button" class="btn btn-primary">clear</button>
		</div>
	}
</div>
